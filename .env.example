# LLM Provider Configuration
LLM_PROVIDER=azure

# Azure OpenAI Default Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_MODEL_NAME=gpt-4
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_TEMPERATURE=0.0
AZURE_OPENAI_MAX_TOKENS=4000
AZURE_OPENAI_TIMEOUT=60
AZURE_OPENAI_MAX_RETRIES=3

# Additional Model Configurations (Optional)
# Format: AZURE_OPENAI_MODEL_<NAME>_<PARAMETER>

# GPT-3.5 Turbo for fast responses
AZURE_OPENAI_MODEL_FAST_NAME=gpt-35-turbo
AZURE_OPENAI_MODEL_FAST_DEPLOYMENT=gpt-35-turbo
AZURE_OPENAI_MODEL_FAST_TEMPERATURE=0.7
AZURE_OPENAI_MODEL_FAST_MAX_TOKENS=2000
AZURE_OPENAI_MODEL_FAST_DESCRIPTION=Fast model for simple tasks

# GPT-4 for code generation with different settings
AZURE_OPENAI_MODEL_CODE_NAME=gpt-4
AZURE_OPENAI_MODEL_CODE_DEPLOYMENT=gpt-4-code
AZURE_OPENAI_MODEL_CODE_TEMPERATURE=0.0
AZURE_OPENAI_MODEL_CODE_MAX_TOKENS=4000
AZURE_OPENAI_MODEL_CODE_DESCRIPTION=Optimized for code generation

# Creative model with higher temperature
AZURE_OPENAI_MODEL_CREATIVE_NAME=gpt-4
AZURE_OPENAI_MODEL_CREATIVE_DEPLOYMENT=gpt-4-creative
AZURE_OPENAI_MODEL_CREATIVE_TEMPERATURE=0.8
AZURE_OPENAI_MODEL_CREATIVE_MAX_TOKENS=3000
AZURE_OPENAI_MODEL_CREATIVE_DESCRIPTION=Creative writing model

# Model with different API key/endpoint (for different Azure resources)
# AZURE_OPENAI_MODEL_PREMIUM_NAME=gpt-4
# AZURE_OPENAI_MODEL_PREMIUM_DEPLOYMENT=gpt-4-premium
# AZURE_OPENAI_MODEL_PREMIUM_API_KEY=different-api-key
# AZURE_OPENAI_MODEL_PREMIUM_ENDPOINT=https://premium-resource.openai.azure.com/
# AZURE_OPENAI_MODEL_PREMIUM_TEMPERATURE=0.1
# AZURE_OPENAI_MODEL_PREMIUM_DESCRIPTION=Premium model with different credentials